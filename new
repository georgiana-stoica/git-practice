import React from 'react';
import { makeStyles } from '@material-ui/core/styles';
import GridList from '@material-ui/core/GridList';
import GridListTile from '@material-ui/core/GridListTile';
import GridListTileBar from '@material-ui/core/GridListTileBar';
import dayjs from 'dayjs';
import { AdapterDayjs } from '@mui/x-date-pickers/AdapterDayjs';
import { LocalizationProvider } from '@mui/x-date-pickers/LocalizationProvider';
import { DateCalendar } from '@mui/x-date-pickers/DateCalendar';
import './Maturity.css';

const useStyles = makeStyles((theme) => ({
  root: {
    display: 'flex',
    flexWrap: 'wrap',
    justifyContent: 'center', // Center the grid list horizontally
    overflow: 'hidden',
  },
  gridList: {
    flexWrap: 'nowrap',
  },
}));

// Example bond data for each day
const bondsData = [
  { maturityDate: '2021-08-09' }, // Adjust with actual data
  { maturityDate: '2021-08-10' }, // Adjust with actual data
  { maturityDate: '2021-08-11' }, // Adjust with actual data
];

export default function SingleLineGridList() {
  const classes = useStyles();

  return (
    <div className={classes.root}>
      <GridList className={classes.gridList} cols={2.5}>
        {bondsData.map((bond, index) => (
          <GridListTile key={index}>
            <GridListTileBar title={dayjs(bond.maturityDate).format('YYYY-MM-DD')} />
          </GridListTile>
        ))}
      </GridList>
    </div>
  );
}
